### Copy this file to venv/.env
### cp .env.example venv/.env

# Ollama (embeddings + chat)
OLLAMA_HOST="http://localhost:11434"
OLLAMA_CHAT_MODEL="llama3.2:3b"
OLLAMA_EMBED_MODEL="nomic-embed-text:latest"

# Optional: override Chroma collection name
# CHROMA_COLLECTION="rag_my_collection"

# Optional debug logging (very verbose; may include full prompts/context)
# DEBUG=1

# --- Optional: IMAP email ingestion (for --watch-email) ---
# EMAIL_IMAP_HOST="imap.example.com"
# EMAIL_IMAP_USER="you@example.com"
# EMAIL_IMAP_PASSWORD="REPLACE_ME"
# EMAIL_IMAP_MAILBOX="INBOX"
# EMAIL_SUBJECT_FILTER="RAG"
# EMAIL_OUT_DIR="./news_articles/email_inbox"
# EMAIL_POLL_SECONDS="30"

# Email-triggered questions: use either:
#   - Email subject starting with "Q: ..." / "QUESTION: ..."
#   - A body line starting with "Q: ..." / "QUESTION: ..."
